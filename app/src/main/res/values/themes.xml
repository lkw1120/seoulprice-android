<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeoulPrice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/seoul_hangang_medium</item>
    </style>

    <style name="Theme.SeoulPrice.Splash" parent="Theme.SeoulPrice">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/seoul_hangang_c_extra_bold</item>
    </style>

    <style name="Theme.SeoulPrice.AppBar" parent="Theme.SeoulPrice">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/seoul_hangang_c_extra_bold</item>
    </style>


    <style name="Theme.SeoulPrice.OssLicense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/seoul_hangang_medium</item>
    </style>

</resources>